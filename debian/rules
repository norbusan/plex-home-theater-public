#!/usr/bin/make -f

#export DH_VERBOSE=1
export DH_OPTIONS

PACKAGE := plexhometheater
pht := $(CURDIR)/debian/$(PACKAGE)

CPPFLAGS:=$(shell dpkg-buildflags --get CPPFLAGS)
CFLAGS:=$(shell dpkg-buildflags --get CFLAGS)
CXXFLAGS:=$(shell dpkg-buildflags --get CXXFLAGS)
LDFLAGS:=$(shell dpkg-buildflags --get LDFLAGS)

CFLAGS += -g -Wall

build: build-arch build-indep
build-arch: build-stamp
build-indep: build-stamp

build-stamp: configure-stamp
	cd WORK && ninja
	touch $@


configure: configure-stamp

configure-stamp:
	dh_testdir
	mkdir -p WORK
	cd WORK && \
		CXXFLAGS="$(CXXFLAGS)" CFLAGS="$(CFLAGS)" LDFLAGS="$(LDFLAGS)" \
		cmake -GNinja -DCOMPRESS_TEXTURES=off -DCREATE_BUNDLE=off -DENABLE_DUMP_SYMBOLS=off -DENABLE_AUTOUPDATE=off  $(CURDIR)
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -rf WORK
	dh_clean install-stamp build-stamp configure-stamp config.log

install: install-stamp

install-stamp: DH_OPTIONS=
install-stamp: build-stamp
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	cd WORK && cmake -DCMAKE_INSTALL_PREFIX=$(pht)/usr/lib/PlexHomeTheater -P cmake_install.cmake
	mv $(pht)/usr/lib/PlexHomeTheater/share/XBMC/* $(pht)/usr/lib/PlexHomeTheater
	rm -rf $(pht)/usr/lib/PlexHomeTheater/share
	cp -a $(pht)/usr/lib/PlexHomeTheater/bin/* $(pht)/usr/lib/PlexHomeTheater/
	rm -rf $(pht)/usr/lib/PlexHomeTheater/bin
	mv $(pht)/usr/lib/PlexHomeTheater/addons/skin.plex/Media \
		$(pht)/usr/lib/PlexHomeTheater/addons/skin.plex/media
	mkdir -p $(pht)/usr/bin
	ln -s ../lib/PlexHomeTheater/plexhometheater $(pht)/usr/bin/plexhometheater
	touch install-stamp

binary-indep: install

binary-arch: DH_OPTIONS=-a
binary-arch: install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
ifeq "$(findstring nostrip,$(DEB_BUILD_OPTIONS))" ""
	dh_strip
endif
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps -X avformat -X avfilter -X postproc -X swresample -X avcodec -X swscale 
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch

orig-tar:
	vers=`dpkg-parsechangelog -S Version | awk -F- '{print$$1}'` ;	\
	if [ -r ../$(PACKAGE)_$$vers.orig.tar.gz ] ; then		\
	  echo "orig.tar.gz already present for $$vers" ; exit 1 ;	\
	else								\
	  git archive 	\
	    --output ../$(PACKAGE)_$$vers.orig.tar.gz pht-frodo		\
	    --prefix $(PACKAGE)-$$vers/ ;				\
	fi

.PHONY: build clean binary-indep binary-arch binary install
